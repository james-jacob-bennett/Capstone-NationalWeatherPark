@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Capstone.Web.Models
@model List<ParkHomeView>




<div class="flex-container-column">
    @foreach (ParkHomeView item in Model)
     {
        <div class="flex-container-row home-border">
            <div class="home-img-container">
                <a href=@Url.Action("Detail", "Home", new { ParkCode = item.ParkCode }, null)>
                <img class="home-img" src="~/Content/img/parks/@(item.ParkCode.ToLower()).jpg" /></a>
            </div>
            <div class="home-description">
                <h1 class="home-header">@item.ParkName</h1>
                <h2 class="home-subheader">@item.State</h2>
                <p>@item.ParkDescription</p>
            </div>
        </div>
     }
</div>